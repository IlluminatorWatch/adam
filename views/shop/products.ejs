<%- include("../includes/header.ejs") %>
<%- include("../includes/script.ejs") %>
<%- include("../includes/navbar.ejs") %>

<body>

    <div class="container d-flex justify-content-center mt-5">


        <div class="row products-container d-flex justify-content-center">
            <% allProducts.forEach( (product) => { %>
            <div class="product-wrapper col-6 col-md-4 col-lg-3">
                <div class="product-img-wrapper">
                    <a href="/productpage/<%=product._id%>" class="specificProduct"><img src="<%= product.imageUrl %> "
                            alt="<%= product.name %>" /></a>
                </div>
                <div class="product-info">
                    <div class="product-name mt-auto"> <%= product.name %> </div>
                    <div class="product-price mt-auto"> <%= product.price %> kr </div>
                </div>
            </div>
            <% }) %>

        </div>
    </div>
    <div class="pagination-wrapper d-flex justify-content-center">
        <% for (let index = 1; index <= pageCount && pageCount > 1; index++) { %>

        <% if ( page == index ){ %>

        <a id="current-page" class="px-2" href="/products/?page=<%= index %>">
                <%= index %>
        </a>

        <%}else {%>

        <a href="/products/?page=<%= index %>" class="px-2">
                <%= index %>
        </a>

        <% } %>
        <% } %>
    </div>
    <%- include("../includes/footer.ejs") %>

</body>
