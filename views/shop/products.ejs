<body>

    <div class="container mt-5">


        <div class="row products-container d-flex justify-content-center">
            <% allItems.forEach( (product) => { %>
            <div class="product-wrapper col-6 col-md-4 col-lg-3">
                <div class="product-img-wrapper">
                    <a href="/productpage/<%=product._id%>" class="specificProduct"><img src="<%= product.imageUrl %> "
                            alt="<%= product.name %>" /></a>
                </div>
                <div class="product-info">
                    <div class="product-name mt-auto"> <%= product.name %> </div>
                    <div class="product-price mt-auto"> <%= product.price %> kr </div>
                </div>
            </div>
            <% }) %>

        </div>
    </div>
