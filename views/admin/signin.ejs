<%- include("../includes/header.ejs") %>
<%- include("../includes/script.ejs") %>


<body id="login_body">
    <%- include("../includes/navbar.ejs"), { user, admin } %>
    <div class="admin-login row py-5">
        <div class="col-md-6 m-auto">
            <div id="login" class="card card-body">
                <h1 class="text-center mt-3 "><i class="fas fa-sign-in-alt"></i>Admin login</h1>
                <%- include("../includes/messages.ejs") %>

                <form action="/admin/signin" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Enter Password" />
                    </div>
                    <button type="submit" class="btn user-btn btn-block mt-5">Logga in</button>
                </form>
            </div>
        </div>
    </div>
    <%- include("../includes/footer.ejs") %>
</body>
