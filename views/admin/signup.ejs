<%- include("../includes/header.ejs") %>
<%- include("../includes/script.ejs") %>

<%- include("../includes/navbar.ejs"), { user, admin } %>
<div class="row m-5">
    <div class="col-md-6 m-auto">
        <div class=" register card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Registrera
            </h1>
            <%- include("../includes/messages.ejs") %>

            <form action="/admin/signup" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                        value="<%= typeof name != 'undefined' ? name : '' %>" />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                        value="<%= typeof email != 'undefined' ? email : '' %>" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirm Password"
                        value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                </div>
                <button type="submit" class="btn user-btn btn-block mt-3"> Registrera </button>
            </form>
            <p class="lead mt-4">Har ett konto? <a href="/admin/signin">Logga in</a></p>
        </div>
    </div>
</div>

<%- include("../includes/footer.ejs") %>