<%- include("./includes/header.ejs") %>
    <%- include("./includes/navbar.ejs") %>
        <%- include("./includes/script.ejs") %>

            <div class="dash-logout text-right m-3">
                <p class="lead ">Welcome
                    <%= user.name %>
                </p>
                <a href="/users/logout" class="btn btn-secondary">Logout</a>
            </div>


            <div class="container" style="margin-top:20px;">
                <h1 class="text-center display-4 font-weight-bold"><u>Add Product</u></h1>
                <br>
                <main role="main">
                    <form id="addp" action="/products/addproduct" method="POST" enctype='multipart/form-data'>

                        <div class="form-group">
                            <label>Product Name</label>
                            <input type="name" class="form-control" name="productname" id="productname" placeholder="Product Name" required>
                        </div>
                        <div class="form-group">
                            <label>Price</label>
                            <input type="number" class="form-control" name="price" id="price" placeholder="Price" required>
                        </div>

                        <div class="form-group">
                            <label>Beskrivning</label>
                            <input type="text" class="form-control" name="Beskrivning" id="Beskrivning" placeholder="Product Beskrivning" required>
                        </div>

                        <div class="form-group">
                            <label>Upload photo</label>
                            <input type="file" class="" name="productphoto" id="productphoto" required="required">
                        </div>
                        <div class="form-group">
                            <div class="form-check" name="checkbox">
                                <input class="form-check-input" type="checkbox" name="check" id="invalidCheck2" required disabled checked>
                                <label class="form-check-label" for="invalidCheck2">
                                    Agree to terms and conditions
                                </label>
                            </div>
                        </div>
                        <button class="button" type="submit">Add Product</button>
                    </form>
                </main>
            </div>
            <br><br>


            <%- include("./includes/footer.ejs") %>